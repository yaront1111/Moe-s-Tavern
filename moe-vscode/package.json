{
  "name": "moe-vscode",
  "displayName": "Moe - AI Workforce Command Center",
  "description": "Visual task board for AI agent orchestration with human oversight",
  "version": "0.1.0",
  "publisher": "yaront1111",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaront1111/Moe-s-Tavern"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "agent",
    "task",
    "kanban",
    "mcp",
    "claude",
    "gpt"
  ],
  "activationEvents": [
    "workspaceContains:.moe",
    "onCommand:moe.connect",
    "onView:moe.board"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "moe",
          "title": "Moe",
          "icon": "resources/moe-icon.svg"
        }
      ]
    },
    "views": {
      "moe": [
        {
          "type": "webview",
          "id": "moe.board",
          "name": "Task Board"
        }
      ]
    },
    "commands": [
      {
        "command": "moe.connect",
        "title": "Moe: Connect to Daemon"
      },
      {
        "command": "moe.disconnect",
        "title": "Moe: Disconnect from Daemon"
      },
      {
        "command": "moe.refresh",
        "title": "Moe: Refresh Board"
      },
      {
        "command": "moe.openTaskDetail",
        "title": "Moe: Open Task Detail"
      },
      {
        "command": "moe.reviewPlan",
        "title": "Moe: Review Plan"
      },
      {
        "command": "moe.createTask",
        "title": "Moe: Create Task"
      },
      {
        "command": "moe.createEpic",
        "title": "Moe: Create Epic"
      },
      {
        "command": "moe.openEpicDetail",
        "title": "Moe: Open Epic Detail"
      },
      {
        "command": "moe.archiveDoneTasks",
        "title": "Moe: Archive Done Tasks"
      },
      {
        "command": "moe.showDaemonStatus",
        "title": "Moe: Show Daemon Status"
      },
      {
        "command": "moe.startAgent",
        "title": "Moe: Start Agent"
      },
      {
        "command": "moe.startAllAgents",
        "title": "Moe: Start All Agents"
      },
      {
        "command": "moe.openSettings",
        "title": "Moe: Open Settings"
      },
      {
        "command": "moe.showActivityLog",
        "title": "Moe: Show Activity Log"
      },
      {
        "command": "moe.restartDaemon",
        "title": "Moe: Restart Daemon"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "moe.createTask",
          "when": "view == moe.board",
          "group": "navigation"
        },
        {
          "command": "moe.refresh",
          "when": "view == moe.board",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Moe",
      "properties": {
        "moe.daemon.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Moe daemon host address"
        },
        "moe.daemon.port": {
          "type": "number",
          "default": 0,
          "description": "Moe daemon port (0 = auto-detect from .moe/daemon.json)"
        },
        "moe.daemon.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the Moe daemon when needed"
        },
        "moe.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to daemon when workspace contains .moe folder"
        },
        "moe.agentCommand": {
          "type": "string",
          "default": "claude",
          "description": "CLI command to launch agents (claude, codex, gemini, or a custom CLI path)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle && npm run esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "esbuild:watch": "npm run esbuild -- --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "bundle": "node ./scripts/bundle-assets.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
